{% extends 'base-inside.html.twig' %}

{% block subbody %}

        <div class="row">
            <div class="col-lg-12">
                <div id="messagePlace">
                    {% if error_message is defined and error_message != null %}
                        <div class="alert alert-danger">{{ error_message }}</div>
                    {% endif %}
                    {% if success_message is defined and success_message != null %}
                        <div class="alert alert-success">{{ success_message }}</div>
                    {% endif %}
                </div>
                <form id="gpx-form" action="{{ path("page_gpx") }}" method="post" role="form" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="trip_name" id="trip_name" tabindex="1" class="form-control" placeholder="Trip name" value="" required>
                    </div>
                    <div class="form-group">
                        <input type="file" name="gpx_file" id="gpx_file" tabindex="2" required>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-3">
                                <input type="submit" name="submit" id="submit" tabindex="4" class="form-control btn btn-register" value="Upload">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    <script>
        // Attach a submit handler to the form
        $( "#gpx-form" ).submit(function( event ) {

            $("#submit").prop('disabled', true);;

        });
    </script>

{% endblock %}